# Firebase Configuration (REQUERIDO)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Email Service Configuration (OPCIONAL)
# El sistema funcionará sin servicio de email, solo logueará en consola
# 
# Opción 1: Resend (Recomendado - 1000 emails/mes gratis)
# Obtén tu API key en: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Opción 2: SendGrid (Alternativa - requiere verificación)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Otras alternativas gratuitas:
# - EmailJS: 200 emails/mes gratis (funciona desde el frontend)
# - Firebase Cloud Functions + Nodemailer con Gmail
# - Simplemente guardar en Firebase sin enviar emails

# Admin API Key (OPCIONAL - para acceder a las estadísticas)
ADMIN_API_KEY=your_secure_admin_api_key

# Analytics (OPCIONAL)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com